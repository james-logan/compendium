  .tag-modal(ng-show="career.tagForm")
    .tag-form
      h3 Tags
      form(ng-submit="career.tagPoster()")
        form-group
          form-label Space Travel (limit 1)
          select.form-control.chosen-select(chosen ng-model="career.tags.space")
            option(value="")
            option(value="planet bound") Planet-bound
            option(value="subftl") subFTL
            option(value="FTL: wormholes") FTL: Wormholes
            option(value="FTL: plain") FTL: Other
          form-label Sub-genre (limit 2)
          select.form-control.chosen-select-2(chosen multiple ng-model="career.tags.subgen" max_selected_option="2")
            option(value="cyberpunk") Cyberpunk
            option(value="scifantasy") Sci-Fantasy
            option(value="space opera") Space Opera
            option(value="hard scifi") Hard Sf
            option(value="military scifi") Military Scifi
            option(value="steampunk") Steampunk
            option(value="other") Other
          form-label Social Tags (limit 1)
          input.form-control(type="text" ng-model="career.tags.social")
          form-label Scientific Concepts (limit 4)
          input.form-control(type="text" ng-model="career.tags.scientific")
          form-label Other (limit 2)
          input.form-control(type="text" ng-model="career.tags.other")
        input(type="submit" value="Save Tags")


